---
import CategoryToggle from './CategoryToggle.astro'
import LinkItem from './LinkItem.astro'

interface Props {
  href?: string
  name: string
  isActive: boolean
  key: number
}

const { name, href, isActive, key } = Astro.props
---

<li role="tab" class="wtq-category_collapse--wrapper" class:list={{ 'wtq-active': isActive }}>
  <CategoryToggle key={key} name={name} />
  <ul class="wtq-category-collapse wtq-rounded wtq-motion" class:list={{ 'wtq-active': isActive }}>
    <li class="wtq-collapse-item wtq-no-motion">
      {href ? <LinkItem href={href} name={name} /> : <slot /> }
    </li>
  </ul>
</li>
