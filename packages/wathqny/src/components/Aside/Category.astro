---
import CategoryToggle from './CategoryToggle.astro'
import LinkItem from './LinkItem.astro'

interface Props {
  href?: string
  name: string
  isActive: boolean
  key: number
}

const { name, href, isActive, key } = Astro.props
---

<li role="tab">
  <details open={isActive}>
  <summary class="wtq-focusable wtq-flex-center wtq-rounded wtq-category-toggle wtq-rounded" class:list={{ 'wtq-active': isActive }}>{name}</summary>
  <div class="wtq-category-container">{href ? <LinkItem href={href} name={name} /> : <slot /> }</div>
</details>
</li>
