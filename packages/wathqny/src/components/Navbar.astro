---
import { Image } from 'astro:assets'
import config from 'wathqny:config'
import { MoonSvg, SunSvg } from 'wathqny:assets'

import { Search } from 'wathqny:components'

const { logo, siteName, navbar } = config
---

<nav class="wtq-navbar wtq-flex-center" role="navigation">
  <a href="/" class="wtq-brand wtq-flex-center">
    <Image
      alt="fruitUI logo, an beautiful orange with a gradient background"
      width={30}
      height={30}
      src={logo as string}
      loading="eager"
    />
    <span>{siteName}</span>
  </a>
  <button
    tabindex="0"
    aria-label="hamburger-menu"
    class="wtq-toggle wtq-nav-lazy-action"
  ></button>
  <ul class="wtq-links  wtq-flex-center wtq-motion">
    {
      navbar?.items.map((item) => {
        return (
          <li class="link-item ">
            <a href={item.href}>{item.label}</a>
          </li>
        )
      })
    }
    <li class="wtq-toggle-wrapper">
      <Search />
    </li>
    <li class="wtq-toggle-wrapper wtq-nav-lazy-action">
      <button
        class="theme-switcher wtq-focusable"
        aria-label="dark mode toggler"
      >
        <MoonSvg size={24} class="dark-mode-moon" />
        <SunSvg size={24} class="dark-mode-sun" />
      
      </button>
    </li>
  </ul>
  <script>
      document.querySelector(".theme-switcher").addEventListener("mouseover", () => import("./Navigation/navbar-darkmode"))
      document.querySelector(".wtq-toggle").addEventListener("mouseover", () => import("./Navigation/navbar-darkmode"))
  </script>
</nav>
