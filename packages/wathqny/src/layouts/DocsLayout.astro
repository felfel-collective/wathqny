---
import type { LayoutInterface } from '../components/types/components'
import SidebarRefine from '../components/Aside/Sidebar.astro'
import Breadcrumbs from '../components/Navigation/breadcrumbs.astro'
import BaseLayout from './BaseLayout.astro'
import SidebarSvg from '../assets/icons/sidebar.svg'

import AuthorProfile from '../components/blog/AuthorProfile.astro'

export interface Props extends LayoutInterface {
  heading?: string | undefined
  authors?: string | undefined
}

const { title, keywords, description, OGImage, heading, authors } = Astro.props as Props
---

<BaseLayout {title} {keywords} {description} {OGImage}>
  <SidebarRefine />
  <div class="wtq-container">
    <div class="wtq-navigation-container wtq-flex-center">
      <Breadcrumbs />
      <button class="wtq-nav-menu wtq-rounded wtq-focusable"><SidebarSvg  /> </button>
    </div>
    <main id="main-content">
      <h1 class="wtq-main-heading">{heading ?? title}</h1>
      <AuthorProfile
        {authors}
      />
      <slot />
    </main>
  </div>
</BaseLayout>
