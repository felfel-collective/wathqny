---
import config from 'wathqny:config'
import { DocsLayout } from 'wathqny:layouts'

type Props = {
  title: string
  description: string
  heading: string
}
---

<DocsLayout title={"docs"} heading={"categories"}>
  <style is:global>
  .wtq-card-container-category {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.3rem;
    margin-top: 30px;
  }

  .wtq-card {
    padding: 25px;
    background-color: hsl(var(--white));
    border: 1px solid hsl(var(--light), 0.5);
    border-radius: calc(var(--radius) * 2);
  }
  .dark .wtq-card {
    background-color: hsl(var(--light), 0.3);
    border-color: hsl(var(--lightest));
  }
  .wtq-card:hover {
    transform: translateY(-5px);
  }
  .wtq-card .wtq-card-title {
    margin: 0;
    font-size: var(--font-lg);
    font-weight: 600;
    line-height: 1.5;
    color: hsl(var(--darkest));
  }
  .wtq-card .wtq-card-subtitle {
    margin: 0;
    font-size: var(--font-xs);
    font-weight: 400;
    color: hsl(var(--dark));
  }

  </style>
  <div class="wtq-card-container-category">
    {
      config?.sidebar?.map((doc: { id: any; label: unknown }) => {
        return (
          <a href={`/docs/${doc.id}/`} class="wtq-card wtq-shadow">
              <h2 class="wtq-card-title">{doc.label}</h2>
          </a>
        )
      })
    }
  </div>
</DocsLayout>
