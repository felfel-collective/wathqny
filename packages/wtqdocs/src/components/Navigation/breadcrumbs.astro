---
import Svg from '@cxa/astro-inline-svg'
import arrowSvg from '../../assets/icons/arrow.svg?raw'
import HomeSvg from '../../assets/icons/home.svg?raw'

import { unslugify } from 'astro-toolkit/utils'
let currentURL: string[] = Astro.url.pathname.split('/')

currentURL = currentURL.filter((url) => url !== '')
---

<ul
  class="wtq-breadcrumbs wtq-flex-center"
  aria-label="Breadcrumb"
  itemscope
  itemtype="https://schema.org/BreadcrumbList"
>
  <li
    itemprop="itemListElement"
    itemscope
    class="wtq-base-breadcrumb wtq-flex-center"
    itemtype="https://schema.org/ListItem"
  >
    <a
      data-astro-prefetch
      href="/"
      class="wtq-breadcrumb wtq-rounded wtq-flex-center wtq-focusable"
      aria-label="Go to the homepage"
      itemprop="item"
    >
      <Svg raw={HomeSvg} />
      <span itemprop="name">Home</span>
    </a>
    <meta itemprop="position" content="1" />
  </li>
  {
    currentURL.map((url, index) => (
      <li
        class:list={[{ 'wtq-base-breadcrumb': index == currentURL.length - 1 }, "wtq-flex-center"]}
        itemprop="itemListElement"
        itemscope
        itemtype="https://schema.org/ListItem"
      >
        
          <Svg class="wtq-arrow-icon" height={20} width={20} raw={arrowSvg} />
        <a
          data-astro-prefetch
          href={`/${currentURL.slice(0, index + 1).join('/')}`}
          class="wtq-breadcrumb wtq-rounded wtq-flex-center wtq-focusable"
          itemprop="item"
        >
          <span itemprop="name">{unslugify(url)}</span>
        </a>
        <meta itemprop="position" content={`${index + 2}`} />
      </li>
    ))
  }
</ul>
