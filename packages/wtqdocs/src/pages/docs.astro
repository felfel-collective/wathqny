---
import type { MarkdownLayoutProps } from 'astro'
import DocsLayout from '../components/Layout/DocsLayout.astro'
import 'wtqdocs/styles/categories'
import config from 'wathqny:config'

type Props = MarkdownLayoutProps<{
  title: string
  description: string
  heading: string
}>
---

<DocsLayout title={"docs"} heading={"categories" ?? "docs"}>
  <div class="wtq-card-container-category">
    {
      config?.sidebar?.map((doc) => {
        return (
          <a href={`/docs/${doc.id}/`} class="wtq-card wtq-shadow">
              <h2 class="wtq-card-title">{doc.label}</h2>
          </a>
        )
      })
    }
  </div>
</DocsLayout>
